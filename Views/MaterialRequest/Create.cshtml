        });


        $('#btnAddDetail').click(function () {
            var rawMateCode = $('#detailCodeHidden').val();
            var rawMateID = $('#detailIDHidden').val();
            var rawMateName = $('#detailNameHidden').val();
            var qty = $('#detailQty').val();
            var eta = $('#detailETA').val();
            var uom = $('#detailUnitOfOrder').val();
            var minQty = $('#detailMinPurchaseQty').val();
            var packaging = $('#packaging').val();
            var remarks = $('#remarks').val();

            var isValid = true;


            if (qty == '' || qty == '0') {
                $('#detailQty').next().html('This field is Required');
                $('#detailQty').addClass('is-invalid');
                isValid = false;
            } else {
                $('#detailQty').next().html('');
                $('#detailQty').removeClass('is-invalid');
            }

            if (qty != '0' && qty != '') {
                if (parseFloat(qty.replace(/\,/g, '')) < parseFloat(minQty.replace(/\,/g, ''))) {
                    $('#detailQty').next().html('Does not reach with MoQ');
                    $('#detailQty').addClass('is-invalid');
                    isValid = false;
                } else {
                    $('#detailQty').next().html('');
                    $('#detailQty').removeClass('is-invalid');
                }
            }

            if (sourceID == 'Warehouse') {
                eta = $('#deliveryDate').val();

                if (packaging == '' || packaging == 0) {
                    $('#packaging').next().html('This field is Required');
                    $('#packaging').addClass('is-invalid');
                    isValid = false;
                } else {
                    $('#packaging').next().html('');
                    $('#packaging').removeClass('is-invalid');
                }
            }

            if (eta == '') {
                $('#detailETA').next().html('This field is Required');
                $('#detailETA').addClass('is-invalid');
                isValid = false;
            } else {
                $('#detailETA').next().html('');
                $('#detailETA').removeClass('is-invalid');
            }

            if (isValid) {
                var html = '<tr>';
                html += '<td>' + rawMateCode + '<input type="hidden" class="rawMateCode" value="' + rawMateCode + '"></td>';
                html += '<input type="hidden" class="rawMateID" value="' + rawMateID + '">';
                html += '<td>' + rawMateName + '</td>';
                html += '<td>' + qty + '<input type="hidden" class="qty" value="' + qty.replace(/\,/g, '') + '"></td>';
                html += '<td><span class="eta_txt">' + eta + '</span><input type="hidden" class="eta" value="' + eta + '"></td>';
                html += '<td>' + uom + '<input type="hidden" class="unitOfOrder" value="' + uom + '"></td>';
                html += '<td>' + remarks + '<input type="hidden" class="remarks" value="' + remarks + '"></td>';

                if (sourceID == 'Warehouse') {
                    html += '<td>' + packaging + '<input type="hidden" class="packaging" value="' + packaging + '"></td>';
                }


                html += '<td><button class="btn btn-danger deleteDetail"><i class="ik ik-trash"></i>Remove</button></td>';
                html += '</tr>';
                $('#detailTable tbody').append(html);
                $('#formModal').modal('hide');
                $('#error_receiving_plan').html("");
            }
        });

