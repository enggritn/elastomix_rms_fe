        $('#data_table tbody').on('click', 'tr', function () {
            var data = table.row(this).data();

            var isValid = true;
            var numItems = $('.rawMateCode').length;
            if (numItems == 0) {
                $('#detailTable tbody').empty();
            } else {
                $('.rawMateID').each(function () {
                    if ($(this).val() == data.ID) {
                        isValid = false;
                        toastr.error('Cannot Add Same Raw Material.');
                        return;
                    }
                });
            }

            if (isValid) {

                $('#materialInfo').show();

                $('#detailIDHidden').val(data.ID);
                $('#detailCodeHidden').val(data.Code);
                $('#detailCode').val(data.Code);
                $('#detailName').val(data.Name);
                $('#detailNameHidden').val(data.Name);
                $('#detailMinPurchaseQty').val(data.MinPurchaseQty);
                $('#detailMinPurchaseQtyKg').val(data.MinPurchaseQty);
                $('#detailMinPurchaseQtyLitre').val(data.MinPurchaseQtyLitre);

