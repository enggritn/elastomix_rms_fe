<script type="text/javascript">

        let server = '@ViewBag.server';
        var isValid = true;
        let token = '@Session["token"].ToString()';
        let sourceID = 'Supplier';
        $('#sourceForm').hide();
        $('#warehouseForm').hide();
        $('#packagingGroup').hide();
        $('#th_packaging').hide();
        initSourceType();

        function initSourceType() {
            $.ajax({
                type: 'GET',
                async: false,
                dataType: "json",
                beforeSend: function (request) {
                    request.setRequestHeader('Token', token);
                },
                url: server + 'Api/MaterialRequest/GetSourceType',
                success: function (response) {
                    isValid = response.status;
                    if (isValid) {
                        let data = response.source_type;
                        let body = '';
                        $('#SourceType').empty();
                        $.each(data, function (index, value) {
                            body += '<option value="' + value + '">' + value + '</option>';
                        });
                        $('#SourceType').append(body);
                    }
                }
            });
        };

        function initTruckType() {
            $.ajax({
                type: 'GET',
                async: false,
                dataType: "json",
                beforeSend: function (request) {
                    request.setRequestHeader('Token', token);
                },
                url: server + 'Api/MaterialRequest/GetTruckType',
                success: function (response) {
                    isValid = response.status;
                    if (isValid) {
                        let data = response.source_type;
                        let body = '';
                        $('#TruckType').empty();
                        $.each(data, function (index, value) {
                            body += '<option value="' + value + '">' + value + ' MT</option>';
                        });
                        $('#TruckType').append(body);
                    }
                }
            });
        };

        var sourceDataTable = $('#sourceDataTable').DataTable({
            processing: true,
            serverSide: true,
            scrollY: "500px",
            scrollX: true,
            scrollCollapse: true,
            paging: true,
            order: [[1, "desc"]],
            ajax: {
                "dataType": "json",
                "type": "POST",
                "url": server + "Api/" + sourceID + "/Datatable"
            },
            columnDefs: [
                { orderable: false, targets: 0 }
            ],
