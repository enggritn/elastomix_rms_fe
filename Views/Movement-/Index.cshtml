
@{
    ViewBag.Title = "Movement";
    ViewBag.Create = String.Concat(ViewBag.Title.Replace(" ", ""), "/Create");
}

<div class="page-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <i class="ik ik-user bg-blue"></i>
                <div class="d-inline">
                    <h5>@ViewBag.Title</h5>
                    <span>List</span>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <nav class="breadcrumb-container" aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href=""><i class="ik ik-database"></i></a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="#">PPIC Data</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
                </ol>
            </nav>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#create">Movement</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#log">Log</a>
            </li>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content">
            <div class="tab-pane active" id="create">
                <div class="card">
                    <div class="card-body">
                        <div class="dt-responsive col-md-12">
                            <table class="table table-bordered table-striped nowrap" id="data_table" width="100%" cellspacing="0">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>BARCODE</th>
                                        <th>RAWMATE CODE</th>
                                        <th>RAWMATE NAME</th>
                                        <th>WAREHOUSE NAME</th>
                                        <th>AREA NAME</th>
                                        <th>BIN/RACK NAME</th>
                                        <th>IN DATE</th>
                                        <th>LOT NUMBER</th>
                                        <th>QTY</th>
                                        <th>RECEIVED AT</th>
                                        <th>ACTION</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="log">
                <div class="card">
                    <div class="card-body">
                        <div class="dt-responsive col-md-12">
                            <table class="table table-bordered table-striped nowrap" id="logDatatable" width="100%" cellspacing="0">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>CODE</th>
                                        <th>BARCODE</th>
                                        <th>RAWMATE CODE</th>
                                        <th>RAWMATE NAME</th>
                                        <th>PREV BIN RACK CODE</th>
                                        <th>PREV BIN RACK NAME</th>
                                        <th>NEW BIN RACK CODE</th>
                                        <th>NEW BIN RACK NAME</th>
                                        <th>IN DATE</th>
                                        <th>LOT NUMBER</th>
                                        <th>QTY</th>
                                        @*<th>RECEIVED AT</th>*@
                                        <th>STATUS</th>
                                        <th>CREATED BY</th>
                                        <th>CREATED ON</th>
                                        <th>MODIFIED BY</th>
                                        <th>MODIFIED ON</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>


@section custom_css
{
    @Styles.Render("~/Content/plugins/datatables/dataTables.bootstrap4.min.css")
    @Styles.Render("~/Content/plugins/datatables/fixedColumns.bootstrap4.min.css")
    @Styles.Render("~/Content/plugins/toastr/toastr.css")
    <style>
        tr.row_selected td {
            background-color: lightblue !important;
        }

        .modal-dialog-big {
            overflow-y: initial !important
        }

        .modal-body-big {
            height: 70vh;
            overflow-y: auto;
        }
    </style>
}

