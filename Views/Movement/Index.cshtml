                    <div class="col-sm-4">
                        <input type="text" autocomplete="off" class="form-control" id="materialCode" readonly />

                    </div>

                </div>
                <div class="form-group row">
                    <label class="col-form-label col-sm-4">Material Name</label>
                    <div class="col-sm-4">
                        <input type="text" autocomplete="off" class="form-control" id="materialName" readonly />

                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-form-label col-sm-4">Area</label>
                    <div class="col-sm-4">
                        <input type="text" autocomplete="off" class="form-control" id="areaOld" readonly />

                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-form-label col-sm-4">Bin/Rack</label>
                    <div class="col-sm-4">
                        <input type="text" autocomplete="off" class="form-control" id="binRackOld" readonly />

                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-form-label col-sm-4">New Area</label>
                    <div class="col-sm-4">
                        <select id="AreaList" class="form-control">
                            <option value="" selected>Select Area</option>
                        </select>
                        <span class="help-block text-danger" id="error_area"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-form-label col-sm-4">New Bin/Rack</label>
                    <div class="col-sm-4">
                        <select id="BinRackCode" class="form-control">
                            <option value="" selected>Select Bin/Rack</option>
                        </select>
                        <span class="help-block text-danger" id="error_binrack"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-form-label col-sm-4">Available Bag Quantity</label>
                    <div class="col-sm-4">
                        <input type="text" autocomplete="off" class="form-control number" id="QtyAvailabe" readonly />

                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-form-label col-sm-4">Bag Quantity</label>
                    <div class="col-sm-4">
                        <input type="text" autocomplete="off" class="form-control number" id="putawayTxt" />
                        <span class="help-block text-danger" id="error_putaway"></span>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnSaveDetail" onclick="PutawayMovementStock()"><i class="ik ik-plus"></i>Save</button>
            </div>
        </div>
    </div>
</div>








