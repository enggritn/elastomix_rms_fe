        function setAreaList(warehouseId) {
            $('#AreaList').select2();
            $.ajax({
                type: 'GET',
                async: false,
                dataType: "json",
                beforeSend: function (request) {
                    request.setRequestHeader('Token', token);
                },
                url: server + 'Api/BinRackArea/WarehouseAreaByType?Type=EMIX',
                success: function (response) {

                    $('#AreaList').empty();
                    var html = '';
                    html += '<option value="" selected>Select Area</option>';
                    $.each(response, function (index, value) {
                        html += '<option value="' + value.ID + '">' + value.Code + ' - ' + value.Name + '</option>';
                    });
                    $('#AreaList').append(html);
                    $('#AreaList').select2({ width: '100%' });
                }
            });
        }

        $('#AreaList').change(function () {

            $.ajax({
                type: 'GET',
                async: false,
                dataType: "json",
                beforeSend: function (request) {
                    request.setRequestHeader('Token', token);
                },
                url: server + 'Api/BinRack/AreaRack?id=' + this.value,
                success: function (response) {

                    $('#BinRackCode').empty();
                    var html = '';
                    html += '<option value="" selected>Select Bin/Rack</option>';
                    $.each(response, function (index, value) {
                        html += '<option value="' + value.Code + '">' + value.Code + ' - ' + value.Name + '</option>';
                    });
                    $('#BinRackCode').append(html);
                    $('#BinRackCode').select2({ width: '100%' });
                }
            });
        });
        function PutawayMovementStock() {
            $.ajax({
                type: 'POST',
                dataType: "json",
                beforeSend: function (request) {
                    request.setRequestHeader('Token', token);
                },
                url: server + 'api/movement/save',
                data: getDataPost(),
                success: function (response) {
                    isValid = response.status;
                    if (isValid) {
                        notify("Success", "success", response.message);
                        $('#data_table').DataTable().ajax.reload();
                        $('#data_table').DataTable().columns.adjust();
                        $('#tableStock').DataTable().ajax.reload();
                        $('#tableStock').DataTable().columns.adjust();
                        $('#putawayModal').modal('hide');
                        //if (!response.IsSuccess) {
                        //    notify("Warning", "warning", response.message);

                        //} else {
                        //    notify("Success", "success", response.message);
                        //    $('#data_table').DataTable().ajax.reload();
                        //    $('#tableStock').DataTable().ajax.reload();
                        //}
                    } else {
                        $.each(response.error_validation, function (index, value) {
                            if (value.FieldName == "BinRackCode") {
                                $('#error_binrack').html(value.ErrorMessage);
                                $('#error_binrack').addClass('is-invalid');
                            } else if (value.FieldName == "AreaList") {
                                $('#error_area').html(value.ErrorMessage);
                                $('#error_area').addClass('is-invalid');
                            } else if (value.FieldName == "putawayTxt") {
                                $('#error_putaway').html(value.ErrorMessage);
                                $('#error_putaway').addClass('is-invalid');
                            } else {
                                $('#' + value.FieldName).next().html(value.ErrorMessage);
                                $('#' + value.FieldName).addClass('is-invalid');
                            }
                        });
                        notify("Warning", "warning", response.message);
                    }
                }

            });
        }
        function getDataPost() {
            $("#error_area").html("");
            $("#error_binrack").html("");
            $("#error_putaway").html("");
            var model = {
                MaterialCode: data_rm.MaterialCode,
                WarehouseCode: data_rm.WarehouseCode,
