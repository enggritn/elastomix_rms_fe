                    PrevBinRackName: $('#binRackOld').val(),
                    NewBinRackCode: $('#BinRackCode').val(),
                    Qty: data_rm.Quantity,
                    QtyAvailable : data_rm.BagQty,
                    QtyTransfer: $('#putawayTxt').val()
                })

            // console.log(model);
            return model;
        }
        function ShowMovementForm(row) {
