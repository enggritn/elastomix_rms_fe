@{
    ViewBag.Title = "Production Plan";
    ViewBag.Module = "ProductionPlan";
}

<div class="page-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <i class="ik ik-inbox bg-blue"></i>
                <div class="d-inline">
                    <h5>@ViewBag.Title</h5>
                    <span>Create</span>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <nav class="breadcrumb-container" aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href=""><i class="ik ik-database"></i></a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="#">PPIC</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Create @ViewBag.Title</li>
                </ol>
            </nav>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h6><b>Please Choose Order</b></h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="dt-responsive col-md-12">
                            <a class="btn btn-primary float-right" id="btnAddPRF" href="#"><i class="ik ik-plus"></i>Add Production Request Form</a>
                            <table class="table table-bordered table-striped nowrap" id="orderDataTable" width="100%" cellspacing="0">
                                <thead class="thead-dark">
                                    <tr>
                                        <th></th>
                                        <th>ID</th>
                                        <th>ORDER NO</th>
                                        <th>PRODUCT NO</th>
                                        <th>CUSTOMER</th>
                                        <th>QTY</th>
                                        <th>HOPE SHIP DATE</th>
                                        <th>REMARKS</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>

                        <div id="orderDetail">
                            <div class="form-group row">
                                <label class="col-form-label col-sm-4">Order No</label>
                                <div class="col-sm-8">
                                    <input type="hidden" id="orderDetailID" class="form-control" />
                                    <input type="text" autocomplete="off" id="orderDetailNo" class="form-control" readonly />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-form-label col-sm-4">Product No</label>
                                <div class="col-sm-8">
                                    <input type="text" autocomplete="off" id="orderDetailProductNo" class="form-control" readonly />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-form-label col-sm-4">Customer</label>
                                <div class="col-sm-8">
                                    <input type="text" autocomplete="off" id="orderDetailCustomer" class="form-control" readonly />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-form-label col-sm-4">Requested Qty</label>
                                <div class="col-sm-8">
                                    <input type="text" autocomplete="off" id="orderDetailQty" class="form-control" readonly />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-form-label col-sm-4">Hope Ship Date</label>
                                <div class="col-sm-8">
                                    <input type="text" autocomplete="off" id="orderDetailETA" class="form-control" readonly />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-form-label col-sm-4">Remarks</label>
                                <div class="col-sm-8">
                                    <input type="text" autocomplete="off" id="orderDetailRemarks" class="form-control" readonly />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-form-label col-sm-4">Production Date</label>
                                <div class="col-sm-8">
                                    <input type="text" autocomplete="off" class="form-control" id="productionDate" />
                                </div>
                            </div>
                            @*<div class="form-group row">
                                    <label class="col-form-label col-sm-4">Attachment</label>
                                    <div class="col-sm-8">
                                        @Html.TextBox("Attachment", "09-07-2020 20:00", new { @class = "form-control" })
                                        <span class="help-block text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-form-label col-sm-4"></label>
                                    <div class="col-sm-8">
                                        <input type="file" />
                                        <span class="help-block text-danger"></span>
                                    </div>
                                </div>*@
                            <br /><br />
                            <div class="dt-responsive col-md-12">
                                <table class="table table-bordered table-striped nowrap" width="100%" cellspacing="0" id="rmTable">
                                    <thead class="thead-light">
                                        <tr>
                                            <th rowspan="2">RM Code</th>
                                            <th rowspan="2">RM Name</th>
                                            <th rowspan="2">UoM</th>
                                            <th colspan="4"><center>Recipe</center></th>
                                            <th rowspan="2">Total Batch</th>
                                            <th colspan="4"><center>Calculation</center></th>
                                            <th rowspan="2">Available Qty</th>
                                            <th rowspan="2">Outstanding Qty</th>
                                        </tr>
                                        <tr>
                                            <th>Qty</th>
                                            <th>Qty/FullBag</th>
                                            <th>FullBag</th>
                                            <th>Remainder</th>
                                            <th>Qty</th>
                                            <th>Qty/FullBag</th>
                                            <th>FullBag</th>
                                            <th>Remainder</th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <a href="@Url.Action("Index", "ProductionPlan")" class="btn btn-outline-info float-left"><i class="ik ik-arrow-left"></i>Back</a>
                <button id="btnSave" type="button" class="btn btn-primary float-right"><i class="ik ik-save"></i>Save</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal" id="saveModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmationModalTitle">Save Data</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure ?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="ik ik-x-circle"></i>No</button>
                <button type="button" class="btn btn-success" id="btnYes"><i class="ik ik-check-circle"></i>Yes</button>
            </div>
        </div>
    </div>
</div>

