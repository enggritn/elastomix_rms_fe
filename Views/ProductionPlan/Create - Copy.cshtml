@section custom_js
{
    @Scripts.Render("~/Content/plugins/datatables/jquery.dataTables.min.js")
    @Scripts.Render("~/Content/plugins/datatables/dataTables.bootstrap4.min.js")
    @Scripts.Render("~/Content/plugins/datatables/dataTables.fixedColumns.min.js")
    @Scripts.Render("~/Content/plugins/toastr/toastr.min.js")
    @Scripts.Render("~/Content/custom/js/notification.js")
    @Scripts.Render("~/Content/plugins/daterangepicker/moment.min.js")
    @Scripts.Render("~/Content/plugins/daterangepicker/daterangepicker.js")
    @Scripts.Render("~/Content/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js")

    <script type="text/javascript">

        let server = '@ViewBag.server';
        var isValid = true;
        let token = '@Session["token"].ToString()';

        $('#orderDetail').hide();
        $('#productionDate').daterangepicker({
            timePicker: true,
            timePicker24Hour: true,
            timePickerIncrement: 5,
            startDate: moment().startOf('hour'),
            endDate: moment().startOf('hour').add(1, 'hour'),
            locale: {
                format: 'DD/MM/YYYY HH:mm'
            }
        });

        function showOrderDetail(id, orderNo, productNo, customer, qty, eta, remarks) {
            $('#orderDetail').show();
            $('#orderDetailID').val(orderNo);
            $('#orderDetailNo').val(orderNo);
            $('#orderDetailProductNo').val(productNo);
            $('#orderDetailQty').val(qty);
            $('#orderDetailCustomer').val(customer);
            $('#orderDetailETA').val(eta);
            $('#orderDetailRemarks').val(remarks);

            $.ajax({
                type: 'GET',
                dataType: "json",
                beforeSend: function (request) {
                    request.setRequestHeader('Token', token);
                },
                url: server + 'Api/ProductionPlan/GetOrderNumberDetail?id=' + id,
                success: function (response) {
                    isValid = response.status;
                    if (isValid) {
                        $('#rmTable tbody').empty();
                        let body = '';
                        $.each(response.data, function (index, value) {
                            body += '<tr>';
                            body += '<td>' + value.RawMaterialCode + '</td>';
                            body += '<td>' + value.RawMaterialName + '</td>';
                            body += '<td>' + value.UoM + '</td>';
                            body += '<td>' + value.RequestedQty + '</td>';
                            body += '<td>' + value.FullBagQty + '</td>';
                            body += '<td>' + value.FullBag + '</td>';
                            body += '<td>' + value.RemainderQty + '</td>';
                            body += '<td>' + value.ProductionQty + '</td>';
                            body += '<td>' + value.TotalQty + '</td>';
                            body += '<td>' + value.FullBagQty + '</td>';
                            body += '<td>' + value.TotalFullBag + '</td>';
                            body += '<td>' + value.TotalRemainderQty + '</td>';
                            body += '<td>' + value.AvailableQty + '</td>';
                            body += '<td>' + value.LackingQty + '</td>';
                            body += '</tr>';
                        });
                        body += '<tr><th colspan="3">Total Ton</th><th>' + response.ton + ' t</th><th colspan="4"></th><th>' + response.totalTon + ' t</th><th colspan="6"></th></tr>';
                        $('#rmTable tbody').append(body);
                        rmTable.columns.adjust();
                    }
                }
            });
        }

        var rmTable = $('#rmTable').DataTable({
            processing: true,
            scrollX: true,
            searching: false,
            paging: false,
            info: false,
            bSort: false,
        });

        var orderTable = $('#orderDataTable').DataTable({
            processing: true,
            serverSide: true,
            scrollY: "250px",
            scrollX: true,
            scrollCollapse: true,
            paging: true,
            order: [[1, "desc"]],
            ajax: {
                "dataType": "json",
                "type": "POST",
                "url": server + "Api/ProductionPlan/DatatableOrderNumber"
            },
            columns: [
                {
                    "data": null,
                    "render" : function(data, type, row) {
                        return '<i class="ik ik-check"></i>';
                    }
                },
                { "data": "ID", visible: false },
                { "data": "OrderNumber" },
                { "data": "ProductNumber" },
                { "data": "CustomerName" },
                { "data": "Qty" },
                { "data": "ETA" },
                { "data": "Remarks" }
            ]
        });
        orderTable.columns.adjust();

        $('#orderDataTable tbody').on('click', 'tr', function () {
            var data = orderTable.row(this).data();
            showOrderDetail(data.ID, data.OrderNumber, data.ProductNumber, data.CustomerName, data.Qty, data.ETA, data.Remarks);
            $('#orderDataTable tbody tr').removeClass('row_selected');
		    $(this).addClass('row_selected');
        });

        $('#btnSave').click(function() {
            clearForm();
            isValid = true;
            if ($('#productionDate').val().length == 0) {
                $('#productionDate').addClass('is-invalid');
                $('#productionDate').next().html('This field is Required');
                isValid = false;
            }

            if (isValid) {
                $('#saveModal').modal('show');
            }
        });

        function clearForm() {
            $('#productionDate').removeClass('is-invalid');
            $('#productionDate').html('');
        }

        function showFlash() {
            toastr.success('Data Successfully Saved')
        }

        function dissmissDialog() {
            $('#saveModal').modal('hide');
        }

        $('#btnYes').click(function () {
            var date = $('#productionDate').val().split(' - ');
            var startDate = moment(date[0], 'DD/MM/YYYY HH:mm').format('YYYY-MM-DD HH:mm');
            var endDate = moment(date[1], 'DD/MM/YYYY HH:mm').format('YYYY-MM-DD HH:mm');

            $.ajax({
                    type: 'POST',
                    dataType: "json",
                    beforeSend: function (request) {
                        request.setRequestHeader('Token', token);
                    },
                    url: server + 'Api/@ViewBag.Module/Create',
                    data: {
                        OrderNumber: $('#detailDetailOrderNo').val(),
                        Attachment: 'tes.txt',
                        StartDate: startDate,
                        ClosedDate: endDate,
                        OrderNumber: $('#orderDetailID').val()
                    },
                    success: function (response) {
                        isValid = response.status;
                        if (!isValid) {
                            $.each(response.error_validation, function (index, value) {
                                $('#' + value.FieldName).next().html(value.ErrorMessage);
                                $('#' + value.FieldName).addClass('is-invalid');
                                toastr.error(value.ErrorMessage);
                            });
                            toastr.error(response.message);
                            dissmissDialog();
                        } else {
                            clearValue();
                            clearForm();
                            dissmissDialog();
                            showFlash();
                        }
                    }
                });
        });

        function clearValue() {
            orderTable.ajax.reload();
            $('#rmTable tbody').empty();
            $('#orderDetail').hide();
        }

        $('#btnAddPRF').click(function () {
            clearValuePRF();
            $('#prfModal').modal('show');
        });

        $('#formulaForm').hide();
        $('#customerForm').hide();

        $('#btnAddDetailPRF').click(function () {
            $('#formModal').modal('show');
        });

        $(document).on('click', '.deleteDetail', function () {
            console.log('delete clicked');
            var target = $(this).parent().parent().closest('tr');
            $(target).remove();
        });

        $("#btnSavePRF").click(function () {
            let i = 0;
            let jsonObj = new Array();
            item = {}
            item ["OrderNumber"] = $('#detailOrderNo').val();
            item ["FormulaID"] = $('#detailFormulaID').val();
            item ["CustomerID"] = $('#detailCustomerID').val();
            item["Qty"] = $('#detailQty').val();
            var eta = moment($('#detailETA').val(), 'DD/MM/YYYY').format('YYYY-MM-DD');
            item["ETA"] = eta;
            item["Remarks"] = $('#detailRemarks').val();
            jsonObj.push(item);

            var issuedDate = moment($('#IssuedDate').val(), 'DD/MM/YYYY').format('YYYY-MM-DD');

            $.ajax({
                type: 'POST',
                dataType: "json",
                beforeSend: function (request) {
                    request.setRequestHeader('Token', token);
                },
                url: server + 'Api/ProductionRequest/Create',
                data: {
                    IssuedNumber: $('#IssuedNumber').val(),
                    IssuedDate: issuedDate,
                    Details: jsonObj
                },
                success: function (response) {
                    isValid = response.status;
                    if (!isValid) {
                        $.each(response.error_validation, function (index, value) {
                            $('#' + value.FieldName).next().html(value.ErrorMessage);
                            $('#' + value.FieldName).addClass('is-invalid');
                        });
                        toastr.error(response.message);
                        dissmissDialog();
                    } else {
                        clearValuePRF();
                        //clearForm();
                        dissmissDialog();
                        showFlash();
                        $('#prfModal').modal('hide');
                        orderTable.ajax.reload();
                    }
                }
            });
        });

        function clearValuePRF() {
            $('#IssuedNumber').val('');
            $('#IssuedDate').val('');
            $('#detailOrderNo').val('');
            $('#detailQty').val('0');
            $('#detailRemarks').val('');
            $('#formulaForm').hide();
            $('#detailProductNumber').val('');
            $('#detailFormulaID').val('');
            $('#detailRecipeCode').val('');
            $('#customerForm').hide();
            $('#detailCustomerName').val('');
            $('#detailCustomerID').val('');
        }

        function dissmissDialog() {
            $('#saveModal').modal('hide');
        }


        function showFlash() {
            toastr.success('Data Successfully Saved')
        }

        $('.datepicker').datepicker({
            format: "dd/mm/yyyy",
            todayBtn: "linked",
            todayHighlight: true,
            orientation: "left",
            autoclose: true,
