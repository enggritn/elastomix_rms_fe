@{
    ViewBag.Title = "Transform";
    ViewBag.Module = "Transform";
}

<div class="page-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <i class="ik ik-inbox bg-blue"></i>
                <div class="d-inline">
                    <h5>@ViewBag.Title</h5>
                    <span>Create</span>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <nav class="breadcrumb-container" aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href=""><i class="ik ik-database"></i></a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="#">Operation</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Create @ViewBag.Title</li>
                </ol>
            </nav>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div id="sourceField">
                            <div class="form-group row">
                                <label class="col-form-label col-sm-4" id="SourceLabel">Source Material</label>
                                <div class="col-sm-6"><u><a href="#" id="btnSelectSource"><i class="ik ik-eye"></i>&nbsp; <ins id="SourceSelectLabel">Select Material</ins></a></u></div>
                            </div>
                        </div>
                        <div id="sourceForm" style="display:none;">
                            <div class="form-group row">
                                <label class="col-form-label col-sm-4">Material Code</label>
                                <div class="col-sm-6">
                                    <input type="text" autocomplete="off" class="form-control" id="MaterialCode" readonly />
                                    <span class="help-block text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-form-label col-sm-4">Material Name</label>
                                <div class="col-sm-6">
                                    <input type="text" autocomplete="off" class="form-control" id="MaterialName" readonly />
                                    <span class="help-block text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-form-label col-sm-4">Material Type</label>
                                <div class="col-sm-6">
                                    <input type="text" autocomplete="off" class="form-control" id="MaterialType" readonly />
                                    <span class="help-block text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-form-label col-sm-4">Available Qty</label>
                                <div class="col-sm-6">
                                    <input type="text" autocomplete="off" class="form-control" id="QtyAvailable" readonly />
                                    <span class="help-block text-danger"></span>
                                </div>
                                <div class="col-sm-1">
                                    <label class="col-form-label"><b>KG</b></label>
                                </div>
                            </div>
                        </div>
                        <hr />
                        <div id="targetField">
                            <div class="form-group row">
                                <label class="col-form-label col-sm-4" id="TargetLabel">Target Material</label>
                                <div class="col-sm-6"><u><a href="#" id="btnSelectTarget"><i class="ik ik-eye"></i>&nbsp; <ins id="TargetSelectLabel">Select Material</ins></a></u></div>
                            </div>
                        </div>
                        <div id="targetForm" style="display:none;">
                            <div class="form-group row">
                                <label class="col-form-label col-sm-4">Material Code</label>
                                <div class="col-sm-6">
                                    <input type="text" autocomplete="off" class="form-control" id="MaterialCodeTarget" readonly />
                                    <span class="help-block text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-form-label col-sm-4">Material Name</label>
                                <div class="col-sm-6">
                                    <input type="text" autocomplete="off" class="form-control" id="MaterialNameTarget" readonly />
                                    <span class="help-block text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-form-label col-sm-4">Material Type</label>
                                <div class="col-sm-6">
                                    <input type="text" autocomplete="off" class="form-control" id="MaterialTypeTarget" readonly />
                                    <span class="help-block text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <hr />
                        <div class="form-group row">
                            <label class="col-form-label col-sm-4">Transform Qty</label>
                            <div class="col-sm-6">
                                <input type="text" autocomplete="off" class="form-control" id="QtyTransform" />
                                <span class="help-block text-danger"></span>
                            </div>
                            <div class="col-sm-1">
                                <label class="col-form-label"><b>KG</b></label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <button type="button" class="btn btn-outline-info float-left" id="btnBack"><i class="ik ik-arrow-left"></i>Back</button>
                <div class="float-right">
                    <button type="button" class="btn btn-primary" id="btnSave"><i class="ik ik-save"></i>Save</button>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal" id="saveModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Save Data</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure ?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="ik ik-x-circle"></i>No</button>
                <button type="button" class="btn btn-success" id="btnYes"><i class="ik ik-check-circle"></i>Yes</button>
            </div>
        </div>
    </div>
</div>


<div class="modal" id="formMaterialSource" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Select Material Source</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="dt-responsive col-md-12">
                    <table class="table table-bordered table-striped nowrap" id="materialTable" width="100%" cellspacing="0">
                        <thead class="thead-dark">
                            <tr>
                                <th></th>
                                <th>MATERIAL CODE</th>
                                <th>MATERIAL NAME</th>
                                <th>MATERIAL TYPE</th>
                                @*<th>QTY</th>*@
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="formMaterialTarget" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Select Material Target</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="dt-responsive col-md-12">
                    <table class="table table-bordered table-striped nowrap" id="materialTableTarget" width="100%" cellspacing="0">
                        <thead class="thead-dark">
                            <tr>
                                <th></th>
                                <th>MATERIAL CODE</th>
                                <th>MATERIAL NAME</th>
                                <th>MATERIAL TYPE</th>
                                @*<th>QTY</th>*@
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


@section custom_css
{
    @Styles.Render("~/Content/plugins/datatables/dataTables.bootstrap4.min.css")
    @Styles.Render("~/Content/plugins/datatables/fixedColumns.bootstrap4.min.css")
    @Styles.Render("~/Content/plugins/toastr/toastr.css")
    @Styles.Render("~/Content/plugins/bootstrap-datepicker/css/bootstrap-datepicker3.min.css")
    @Styles.Render("~/Content/plugins/select2/dist/css/select2.min.css")

    <style>
        tr.row_selected td {
            background-color: lightblue !important;
        }
    </style>
}

@section custom_js
{
    @Scripts.Render("~/Content/plugins/datatables/jquery.dataTables.min.js")
    @Scripts.Render("~/Content/plugins/datatables/dataTables.bootstrap4.min.js")
    @Scripts.Render("~/Content/plugins/datatables/dataTables.fixedColumns.min.js")
    @Scripts.Render("~/Content/plugins/toastr/toastr.min.js")
    @Scripts.Render("~/Content/custom/js/notification.js")
    @Scripts.Render("~/Content/plugins/select2/dist/js/select2.min.js")
    @Scripts.Render("~/Content/plugins/inputmask/js/jquery.inputmask.bundle.js")

<script type="text/javascript">

        let server = '@ViewBag.server';
        var isValid = true;
    let token = '@Session["token"].ToString()';


    let SourceCode = "";
        let TargetCode = "";


        $('#QtyTransform').inputmask({ "placeholder": "", 'alias': 'numeric', 'groupSeparator': ',', 'radixPoint': '.', 'autoGroup': true, 'digits': 2, 'digitsOptional': true });

    $('#btnBack').click(function () {
        window.location.replace('@Url.Action("Index", "Transform")')
    });

        $('#btnSave').click(function () {
            $('#saveModal').modal('show');
        });

    $('#btnYes').click(function () {
        $('#btnSave').prop('disabled', true);
            $.ajax({
                type: 'POST',
                dataType: "json",
                beforeSend: function (request) {
                    request.setRequestHeader('Token', token);
                },
                url: server + 'Api/Transform/Create',
                data: {
                    MaterialCode: SourceCode,
                    MaterialCodeTarget: TargetCode,
                    TotalQty: $('#QtyTransform').val() != "" ? $('#QtyTransform').val().replace(/\,/g, '') : 0

                },
                success: function (response) {
                    isValid = response.status;
                    if (!isValid) {
                        $.each(response.error_validation, function (index, value) {
                            if (value.FieldName == 'WarehouseCode') {
                                $('#error_warehouse').html(value.ErrorMessage);
                            } else {
                                $('#' + value.FieldName).next().html(value.ErrorMessage);
                                $('#' + value.FieldName).addClass('is-invalid');
                            }

                        });

                        notify("Warning", "warning", response.message);

                    } else {
                        notify("Success", "success", response.message);
                        setTimeout(function () {  window.location.replace('@Url.Action("Detail", "Transform")?id=' + response.id); }, 1000);
                        setTimeout(function () {  window.location.replace('@ViewBag.BaseUrl/Transform/Detail?id=' + response.id); }, 1000);
                    }
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    notify("Error", "error", "Oops! Something went wrong.");
                },
                complete: function () {
                    $('#saveModal').modal('hide');
                    $('#btnSave').prop('disabled', false);
                }

            });
        });


        function dissmissDialog() {
            $('#saveModal').modal('hide');
        }


    $('#SourceSelectLabel').click(function () {
        $('#formMaterialSource').modal('show');
        materialTable.columns.adjust();
        materialTable.draw();
    });

    var materialTable = $('#materialTable').DataTable({
        processing: true,
        serverSide: true,
        scrollY: "500px",
        scrollX: true,
        scrollCollapse: true,
        paging: true,
        order: [[1, "asc"]],
        ajax: {
            "dataType": "json",
            "type": "POST",
            "url": server + "Api/Transform/DatatableVProductStock?type=source"
        },
        columnDefs: [
            { orderable: false, targets: 0 }
        ],
        columns: [
            {
                "data": null,
                "render": function (data, type, row) {
                    return '<i class="ik ik-check"></i>';
                }
            },
            { "data": "MaterialCode", "name": "MaterialCode", "autoWidth": true },
            { "data": "MaterialName", "name": "MaterialName", "autoWidth": true },
            { "data": "MaterialType", "name": "MaterialType", "autoWidth": true },
            //{ "data": "TotalQty", "name": "TotalQty", "autoWidth": true },
        ]
    });


    $('#materialTable tbody').on('click', 'tr', function () {
        var data = materialTable.row(this).data();
        $('#MaterialCode').val(data.MaterialCode);
        $('#MaterialName').val(data.MaterialName);
        $('#MaterialType').val(data.MaterialType);
        $('#QtyAvailable').val(data.TotalQty);

        SourceCode = data.MaterialCode;

        if (SourceCode == TargetCode) {
            notify("Warning", "warning", "Cannot choose same material.");
            return;
        }

        $('#sourceForm').show();
        $('#formMaterialSource').modal('hide');

        $("#materialTable tbody tr").removeClass('row_selected');
        $(this).addClass('row_selected');

    });


    $('#TargetSelectLabel').click(function () {
        $('#formMaterialTarget').modal('show');
        materialTableTarget.columns.adjust();
        materialTableTarget.draw();
    });

    var materialTableTarget = $('#materialTableTarget').DataTable({
        processing: true,
        serverSide: true,
        scrollY: "500px",
        scrollX: true,
        scrollCollapse: true,
        paging: true,
        order: [[1, "asc"]],
        ajax: {
            "dataType": "json",
            "type": "POST",
            "url": server + "Api/Transform/DatatableProductMaster"
        },
        columnDefs: [
            { orderable: false, targets: 0 }
        ],
        columns: [
            {
                "data": null,
                "render": function (data, type, row) {
                    return '<i class="ik ik-check"></i>';
                }
            },
            { "data": "MaterialCode", "name": "MaterialCode", "autoWidth": true },
            { "data": "MaterialName", "name": "MaterialName", "autoWidth": true },
            { "data": "MaterialType", "name": "MaterialType", "autoWidth": true },
            //{ "data": "TotalQty", "name": "TotalQty", "autoWidth": true },
        ]
    });


    $('#materialTableTarget tbody').on('click', 'tr', function () {
        var data = materialTableTarget.row(this).data();
        $('#MaterialCodeTarget').val(data.MaterialCode);
        $('#MaterialNameTarget').val(data.MaterialName);
        $('#MaterialTypeTarget').val(data.MaterialType);

        TargetCode = data.MaterialCode;

        if (SourceCode == TargetCode) {
            notify("Warning", "warning", "Cannot choose same material.");
            return;
        }


        $('#targetForm').show();
        $('#formMaterialTarget').modal('hide');

        $("#materialTableTarget tbody tr").removeClass('row_selected');
        $(this).addClass('row_selected');
    });
</script>
}