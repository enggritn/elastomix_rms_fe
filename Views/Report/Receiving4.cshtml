@{
    ViewBag.Title = "Report Receiving 4";
    ViewBag.Module = "Receiving";
}

<div class="page-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <i class="ik ik-inbox bg-blue"></i>
                <div class="d-inline">
                    <h5>@ViewBag.Title</h5>
                    <span>List</span>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <nav class="breadcrumb-container" aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href=""><i class="ik ik-database"></i></a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="#">Logistic</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Edit @ViewBag.Title</li>
                </ol>
            </nav>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group row">
                            <label class="col-form-label col-sm-2">Start Schedule Date</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control datepicker" id="DateFilter" value="@DateTime.Now.ToString("dd/MM/yyyy")" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-form-label col-sm-2">End Schedule Date</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control datepicker" id="EndDateFilter" value="@DateTime.Now.ToString("dd/MM/yyyy")" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-form-label col-sm-2">Warehouse</label>
                            <div class="col-sm-4">
                                <select class="form-control" id="WarehouseFilter">
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-form-label col-sm-2">Source Type</label>
                            <div class="col-sm-4">
                                <select class="form-control" id="SourceType">
                                </select>
                                <span class="help-block text-danger"></span>
                            </div>
                        </div>
                        <br />
                        <br />
                        <div class="form-group row mb-0">
                            <div class="col-md-12">
                                <button type="button" class="btn btn-success" id="btnRefreshDataTable">Refresh</button>
                                <button type="button" id="btnExport" class="btn btn-primary float-right">Export Excel</button>
                            </div>
                        </div>
                    </div>
                </div>
                <br />
                <div class="dt-responsive col-md-12">
                    <table class="table table-bordered nowrap" width="100%" cellspacing="0" id="data_table">
                        <thead>
                            <tr>
                                <th>PO NO.</th>
                                <th>SUPPLIER</th>
                                <th>MATERIAL CODE</th>
                                <th>MATERIAL NAME</th>
                                <th>SCHEDULE</th>
                                <th>TOTAL QTY PO</th>
                                <th>IN DATE</th>
                                <th>EXP DATE</th>
                                <th>LOT NO.</th>
                                <th>QTY PER BAG</th>
                                <th>QTY BAG</th>
                                <th>TOTAL</th>
                                <th>DO NO.</th>
                                <th>OK</th>
                                <th>NG DAMAGE</th>
                                <th>NG WET</th>
                                <th>NG CONTAMINTAION</th>
                                <th>COA</th>
                                <th>STATUS PO</th>
                                <th>RECEIVED BY</th>
                                <th>RECEIVED ON</th>
                                <th>QTY PUTAWAY</th>
                                <th>PUTAWAY BY</th>
                                <th>PUTAWAY ON</th>
                                <th>AREA</th>
                                <th>RACK NO.</th>
                                <th>STATUS</th>
                                <th>REMARKS</th>
                            </tr>
                        </thead>
                    </table>
                </div>
                @*<div class="card-footer">
            <button type="button" class="btn btn-outline-info float-left" id="btnBack"><i class="ik ik-arrow-left"></i>Back</button>
        </div>*@
            </div>
        </div>
    </div>
</div>


@section custom_css
{
    @Styles.Render("~/Content/plugins/datatables/dataTables.bootstrap4.min.css")
    @Styles.Render("~/Content/plugins/datatables/fixedColumns.bootstrap4.min.css")
    @Styles.Render("~/Content/plugins/toastr/toastr.css")
    @Styles.Render("~/Content/plugins/bootstrap-datepicker/css/bootstrap-datepicker3.min.css")
    @Styles.Render("~/Content/plugins/select2/dist/css/select2.min.css")
    <style>
        tr.row_selected td {
            background-color: lightblue !important;
        }

        .modal {
            overflow: auto !important;
        }
    </style>

}

@section custom_js
{
    @Scripts.Render("~/Content/plugins/datatables/jquery.dataTables.min.js")
    @Scripts.Render("~/Content/plugins/datatables/dataTables.bootstrap4.min.js")
    @Scripts.Render("~/Content/plugins/datatables/dataTables.fixedColumns.min.js")
    @Scripts.Render("~/Content/plugins/toastr/toastr.min.js")
    @Scripts.Render("~/Content/custom/js/notification.js")
    @Scripts.Render("~/Content/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js")
    @Scripts.Render("~/Content/plugins/inputmask/js/jquery.inputmask.bundle.js")
    @Scripts.Render("~/Content/plugins/daterangepicker/moment.min.js")
    @Scripts.Render("~/Content/plugins/select2/dist/js/select2.min.js")

<script>

        let server = '@ViewBag.server';
        var isValid = true;
        let token = '@Session["token"].ToString()';
        let module = '@ViewBag.Module';
        let baseUrl = '@ViewBag.BaseUrl';

        $('#btnBack').click(function () {
            window.location.replace('@Url.Action("Receiving4", "Report")')
        });

        let receivingID = "";
        let receivingData = "";
        let destinationCode = "";

        initSourceType();
        $('#WarehouseFilter').select2();

        function initSourceType() {
            $.ajax({
                type: 'GET',
                async: false,
                dataType: "json",
                beforeSend: function (request) {
                    request.setRequestHeader('Token', token);
                },
                url: server + 'Api/MaterialRequest/GetSourceType',
                success: function (response) {
                    isValid = response.status;
                    if (isValid) {
                        $('#SourceType').empty();
                        $('#SourceType').append('<option value="">All</option>');
                        var html = '';
                        $.each(response.source_type, function (index, value) {
                            html += '<option value="' + value + '">' + value + '</option>';
                        });
                        $('#SourceType').append(html);
                    }
                }
            });
        };

        var table = $('#data_table').DataTable({
            processing: true,
            serverSide: true,
            sScrollXInner: '150%',
            scrollY: "500px",
            scrollX: true,
            scrollCollapse: true,
            paging: true,
            order: [[10, "asc"]],
            ajax: {
                dataType: "json",
                type: "POST",
                url: server + "Api/@ViewBag.Module/DatatableDetailReceiving4",
                data: function (d) {
                    d.date = moment($('#DateFilter').val(), 'DD/MM/YYYY').format('YYYY-MM-DD');
                    d.enddate = moment($('#EndDateFilter').val(), 'DD/MM/YYYY').format('YYYY-MM-DD');
                    d.warehouseName = $('#WarehouseFilter').val();
                    d.sourceType = $('#SourceType').val();
                }
            },
            columnDefs: [
                { orderable: false, targets: 0 },
                { orderable: false, targets: -1 },
                { orderable: false, targets: -2 },
                { orderable: false, targets: -3 },
                { orderable: false, targets: -4 },
            ],
            columns: [
                { "data": "PONo", "name": "PONo", "autoWidth": false },
                { "data": "Supplier", "name": "Supplier", "autoWidth": false },
                { "data": "MaterialCode", "name": "MaterialCode", "autoWidth": false },
                { "data": "MaterialName", "name": "MaterialName", "autoWidth": false },
                { "data": "Schedule", "name": "Schedule", "autoWidth": false },
                { "data": "TotalQtyPo", "name": "TotalQtyPo", "autoWidth": false },
                { "data": "InDate", "name": "InDate", "autoWidth": false },
                { "data": "ExpDate", "name": "ExpDate", "autoWidth": false },
                { "data": "LotNo", "name": "LotNo", "autoWidth": false },
                { "data": "QtyPerBag", "name": "QtyPerBag", "autoWidth": false },
                { "data": "QtyBag", "name": "QtyBag", "autoWidth": false },
                { "data": "Total", "name": "Total", "autoWidth": false },
                { "data": "DoNo", "name": "DoNo", "autoWidth": false },
                { "data": "Ok", "name": "Ok", "autoWidth": false },
                { "data": "NgDamage", "name": "NgDamage", "autoWidth": false },
                { "data": "NgWet", "name": "NgWet", "autoWidth": false },
                { "data": "NgContamination", "name": "NgContamination", "autoWidth": false },
                { "data": "COA", "name": "COA", "autoWidth": false },
                { "data": "StatusPo", "name": "StatusPo", "autoWidth": false },
                { "data": "ReceivedBy", "name": "ReceivedBy", "autoWidth": false },
                { "data": "ReceivedOn", "name": "ReceivedOn", "autoWidth": false },
                { "data": "QtyPutaway", "name": "QtyPutaway", "autoWidth": false },
                { "data": "PutawayBy", "name": "PutawayBy", "autoWidth": false },
                { "data": "PutawayOn", "name": "PutawayOn", "autoWidth": false },
                { "data": "Area", "name": "Area", "autoWidth": false },
                { "data": "RackNo", "name": "RackNo", "autoWidth": false },
                { "data": "Status", "name": "Status", "autoWidth": false },
                { "data": "Remarks", "name": "Remarks", "autoWidth": false }
            ]
        });

        $('.number').inputmask({ "placeholder": "", 'alias': 'decimal', 'groupSeparator': ',', 'autoGroup': true, 'digits': 2, 'digitsOptional': true});
        $('.number-non-decimal').inputmask({ "placeholder": "", 'alias': 'decimal', 'groupSeparator': ',', 'autoGroup': true, 'digits': 0, 'digitsOptional': false });

        $('.datepicker').datepicker({
            format: "dd/mm/yyyy",
            todayBtn: "linked",
            todayHighlight: true,
            orientation: "left",
            autoclose: true,
            endDate: '+0d',
            /*startDate: '+0d',*/
        });

        $('#btnAdd').click(function () {
             ShowReceiveForm();
        });

    $.ajax({
        type: 'GET',
        async: false,
        dataType: "json",
        beforeSend: function (request) {
            request.setRequestHeader('Token', token);
        },
        url: server + 'Api/Warehouse/GetData',
        success: function (response) {
            isValid = response.status;
            if (isValid) {
                $('#WarehouseFilter').empty();
                $('#WarehouseFilter').append('<option value="">Select Warehouse</option>');
                var html = '';
                $.each(response.list, function (index, value) {
                    html += '<option value="' + value.Name + '">' + value.Code + ' - ' + value.Name + '</option>';
                });
                $('#WarehouseFilter').append(html);
            }
        }
    });


    $('#btnExport').click(function () {
        let DateFilter = moment($('#DateFilter').val(), 'DD/MM/YYYY').format('YYYY-MM-DD');
        let EndDateFilter = moment($('#EndDateFilter').val(), 'DD/MM/YYYY').format('YYYY-MM-DD');
        let WarehouseFilter = $('#WarehouseFilter').val();
        let SourceType = $('#SourceType').val();

        window.open('@Url.Action("ExportReceivingToExcel4", "Receiving")' + '?date=' + DateFilter + '&enddate=' + EndDateFilter + '&warehouse=' + WarehouseFilter + '&sourcetype=' + SourceType, "_blank");
    });

    $('#btnRefreshDataTable').click(function () {
        table.ajax.reload();
    });

    $('#DateFilter').change(function () {
        table.ajax.reload();
    });

    $('#EndDateFilter').change(function () {
        table.ajax.reload();
    });

    $('#WarehouseFilter').change(function () {
        table.ajax.reload();
    });

    $('#SourceType').change(function () {
        table.ajax.reload();
    });
</script>
}