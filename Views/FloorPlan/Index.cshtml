    <li class="nav-item">
        <a class="nav-link active" id="pills-layout-raw-material-tab" data-toggle="pill" href="#layout-raw-material" role="tab" aria-controls="layout-raw-material" aria-selected="true">Layout Raw Material</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="layout-raw-material-tab" data-toggle="pill" href="#layout-raw-material-2" role="tab" aria-controls="layout-raw-material-2" aria-selected="false">Layout Raw Material - 2</a>
