
@{
    ViewBag.Title = "Layout";
    ViewBag.Module = "Floor Plan";


    Char[] alpha = "ABCDEFGHIJKLMNOPQRSTUVWXYZ".ToCharArray();

    int Rak5Row = 1;
    int Rak5Col = 1;

    int Rak6Row = 1;
    int Rak7Row = 1;
    int Rak8Row = 1;
    int Rak9Row = 1;
    int Rak10Row = 1;
    int Rak11Row = 1;
    int Rak12Row = 1;
}

